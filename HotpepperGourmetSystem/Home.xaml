            <Label Content="Label" HorizontalAlignment="Left" Margin="0,10,0,-190" VerticalAlignment="Top" Height="571" Grid.RowSpan="8" Width="3" Background="#FFC5C5C5" Grid.Column="1"/>
            <Label Content="予算" HorizontalAlignment="Left" Margin="58,10,0,0" Grid.Row="5" VerticalAlignment="Top" FontSize="16"/>
            <Button Content="Button" HorizontalAlignment="Left" Margin="47,5,0,0" Grid.Row="6" VerticalAlignment="Top" Width="31" Height="31"/>
            <Button Content="Button" HorizontalAlignment="Left" Margin="78,5,0,0" Grid.Row="6" VerticalAlignment="Top" Width="31" Height="31"/>
