<Page x:Class="HotpepperGourmetSystem.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HotpepperGourmetSystem"
      mc:Ignorable="d" 
      Title="Home" Height="600" Width="1000" Loaded="Page_Loaded">
    <StackPanel>
        <Grid Height="598">
            <Grid.RowDefinitions>
                <RowDefinition Height="130"/>
                <RowDefinition Height="28"/>
                <RowDefinition Height="45"/>
                <RowDefinition Height="45"/>
                <RowDefinition Height="45"/>
                <RowDefinition Height="45"/>
                <RowDefinition Height="45"/>
                <RowDefinition Height="0*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="133*"/>
                <ColumnDefinition Width="667*"/>
            </Grid.ColumnDefinitions>
            <!--<Button
                 Margin="340,0,0,17"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Bottom"
                 Style="{StaticResource MaterialDesignFloatingActionLightButton}"
                 ToolTip="MaterialDesignFloatingActionLightButton" Grid.Column="1" Height="157" Grid.RowSpan="4" Width="157" Grid.Row="3" Background="Firebrick" BorderBrush="Firebrick"/>-->

            <!--<Image HorizontalAlignment="Left" Height="624" Margin="166,0,-161,-235.2" VerticalAlignment="Top" Width="995" Source="Images/白黒画像.png" Grid.RowSpan="8" Grid.ColumnSpan="2"/>-->
            <Label x:Name="lb1" Content="Label" Margin="498,11,246,-126" Grid.Column="1" Grid.Row="7"/>
            <Image HorizontalAlignment="Left" Height="46" Margin="21,42,0,0" VerticalAlignment="Top" Width="124" Source="Images/Hotpepper.jpg"/>
            <Image HorizontalAlignment="Left" Height="31" Margin="71,14,0,0" VerticalAlignment="Top" Width="31" Source="Images/太陽.jpg" Grid.Row="6"/>
            <Image HorizontalAlignment="Left" Height="20" Margin="112,19,0,0" VerticalAlignment="Top" Width="21" Source="Images/月.png" Grid.Row="6"/>
            <!--<Image HorizontalAlignment="Left" Height="29" Margin="66,10,0,0" VerticalAlignment="Top" Width="28" Source="Images/お金.png" Grid.Row="5"/>-->
            <Button x:Name="goArea" Margin="10,30" Click="Button_Click" Grid.Row="2" Content="地域" Background="Transparent" BorderBrush="#FFA3A3A3" Foreground="#DD8B8B8B" Grid.RowSpan="2"/>
            <Button x:Name="goGenre" Margin="10,30" Click="goGenre_Click_1" Grid.Row="3" Content="ジャンル" Background="Transparent"  BorderBrush="#FFA3A3A3" Foreground="#DD8B8B8B" Grid.RowSpan="2"/>
            <TextBlock HorizontalAlignment="Left" Margin="24,0,0,0" Grid.Row="1" TextWrapping="Wrap" Text="── HOME ──" VerticalAlignment="Top" Height="22" Width="121" FontSize="16"/>
            <Label Content="Label" HorizontalAlignment="Left" Margin="10,10,0,-190" VerticalAlignment="Top" Height="571" Grid.RowSpan="8" Width="3" Background="#FFC5C5C5" Grid.Column="1"/>
            <Label Content="予算" HorizontalAlignment="Left" Margin="21,14,0,0" Grid.Row="6" VerticalAlignment="Top" FontSize="16"/>
            <Button Content="Button" HorizontalAlignment="Left" Margin="71,14,0,0" Grid.Row="6" VerticalAlignment="Top" Width="31" Height="31" Background="{x:Null}" Foreground="{x:Null}" BorderBrush="#FFCBCBCB"/>
            <Button Content="Button" HorizontalAlignment="Left" Margin="107,14,0,0" Grid.Row="6" VerticalAlignment="Top" Width="31" Height="31" Background="{x:Null}" Foreground="{x:Null}" BorderBrush="#FFCBCBCB"/>
            <ComboBox x:Name="cbBudgetMin" HorizontalAlignment="Left" Height="24" Margin="16,13,0,-36" Grid.Row="7" VerticalAlignment="Top" Width="64"/>
            <Label Content="～" HorizontalAlignment="Left" Height="23" Margin="80,14,0,-36" Grid.Row="7" VerticalAlignment="Top"/>
            <ComboBox x:Name="cbBudgetMax" HorizontalAlignment="Left" Height="25" Margin="100,12,0,-36" Grid.Row="7" VerticalAlignment="Top" Width="64"/>
            <Label Content="人数" HorizontalAlignment="Left" Height="28" Margin="21,106,0,-133" Grid.Row="7" VerticalAlignment="Top" FontSize="16"/>
            <ComboBox x:Name="cbNumber" HorizontalAlignment="Left" Height="24" Margin="66,110,0,-133" Grid.Row="7" VerticalAlignment="Top" Width="79"/>
            <Label Content="Label" HorizontalAlignment="Left" Margin="18,15,0,0" Grid.Row="5" VerticalAlignment="Top" Height="1" Width="135" Background="#FFC5C5C5"/>
            <Label Content="Label" HorizontalAlignment="Left" Height="2" Margin="10,73,0,-74" Grid.Row="7" VerticalAlignment="Top" Width="146" Background="#FFC5C5C5"/>

        </Grid>
    </StackPanel>
</Page>
